{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true
  }
}
